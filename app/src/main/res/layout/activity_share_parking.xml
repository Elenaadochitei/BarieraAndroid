<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareParking">

    <ImageView
        android:id="@+id/backgroundImage1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/rasaritt" />

    <EditText
        android:id="@+id/numberParking"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="541dp"
        android:background="#A1FFFFFF"
        android:hint="Introduceti numarul parcari"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="391dp"
        android:background="#A1FFFFFF"
        android:hint="Adaugati o descriere(limita 150 caractere)"
        android:maxLength="150"
        android:textSize="25dp" />

    <Button
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="330dp"
        android:background="@drawable/roundedbutton"
        android:text="Data si ora inceput" />

    <TextView
        android:id="@+id/start"
        android:layout_width="141dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="270dp"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="330dp"
        android:background="@drawable/roundedbutton"
        android:text="Data si ora sfarsit" />

    <TextView
        android:id="@+id/expiration"
        android:layout_width="153dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="270dp"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/editButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="270dp"
        android:background="@drawable/roundedbutton"
        android:text="Salveaza" />

</RelativeLayout>