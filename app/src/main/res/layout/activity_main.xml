<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/rasaritt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="68dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="330dp"
            android:layout_marginBottom="580dp"
            android:text="Adaugă mașină"
            android:textAlignment="center"
            android:textColor="#040404"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="230dp"
            android:layout_marginBottom="580dp"
            android:text="Anulare persoană"
            android:textAlignment="center"
            android:textColor="#040404"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="580dp"
            android:text="Modificare număr"
            android:textAlignment="center"
            android:textColor="#040404"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="580dp"
            android:text="Parcare disponibilă"
            android:textAlignment="center"
            android:textColor="#040404"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/barrier"
            android:layout_width="413dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="670dp"
            android:padding="0dp"
            android:text="Get out of MY WAY!"
            android:textAlignment="center"
            android:textColor="#040404"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="650dp"
            android:background="#040404" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="500dp"
            android:background="#040404" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="330dp"
            android:layout_marginBottom="530dp"
            android:layout_weight="6"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/add" />

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="230dp"
            android:layout_marginBottom="530dp"
            android:layout_weight="6"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/cancel" />

        <ImageButton
            android:id="@+id/admin"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="530dp"
            android:layout_weight="6"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/account" />

        <ImageButton
            android:id="@+id/parking"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="530dp"
            android:layout_weight="6"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/parking" />

        <Button
            android:id="@+id/parkingSpaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="430dp"
            android:background="@drawable/roundedbutton"
            android:text="Locuri de parcare libere"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
