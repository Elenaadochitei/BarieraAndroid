<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >



    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/barrier2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:text="Adauga persoana"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="635dp"
        android:textAlignment="center"
        android:textColor="#3F1717"
        android:textColorHighlight="#28808B"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:text="Anulare persoana"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="635dp"
        android:textAlignment="center"
        android:textColor="#3F1717"
        android:textColorHighlight="#28808B"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="54dp" />


    <TextView
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:text="Contul meu"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="635dp"
        android:textColor="#3F1717"
        android:textColorHighlight="#28808B"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/barrier"
        android:layout_width="413dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="720dp"
        android:padding="0dp"
        android:text="Get out of MY WAY!"
        android:textAlignment="center"
        android:textColor="#F4F1F1"
        android:textColorHighlight="#28808B"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#E30B0B"
        tools:ignore="MissingConstraints"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="700dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#E30B0B"
        tools:ignore="MissingConstraints"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="530dp"

 />


    <ImageButton
        android:id="@+id/add"
        android:layout_width="68dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="580dp"
        android:layout_weight="6"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/add"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="98dp" />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="68dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="580dp"
        android:layout_weight="6"
        android:src="@drawable/cancel"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:background="@null"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="98dp" />

    <ImageButton
        android:id="@+id/admin"
        android:layout_width="68dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="580dp"
        android:layout_weight="6"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/admin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="97dp" />




</RelativeLayout>